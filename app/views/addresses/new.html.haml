.new-user-wrap
  = render 'users/progress'
  .container
    .registration-box
      %h2 発送元・お届け先住所
      .registration-box__inner
        = form_with url:addresses_path, model: @address, local: true do |f|
          .registration-box__section
            %h3
              お名前
              %span 必須
            = f.text_field :name, class: "sell-box__info--input sell-box__info--name", placeholder: "例 フリマ"
            = f.text_field :name2, class: "sell-box__info--input sell-box__info--name", placeholder: "例 太郎"

          .registration-box__section
            %h3
              お名前カナ
              %span 必須
            = f.text_field :katakana, class: "sell-box__info--input sell-box__info--name", placeholder: "例 フリマ"
            = f.text_field :katakana2, class: "sell-box__info--input sell-box__info--name", placeholder: "例 タロウ"

          .registration-box__section
            %h3
              郵便番号
              %span 必須
            = f.text_field :postal_code, class: "sell-box__info--input sell-box__info--name", placeholder: "例 123-4567"

          .registration-box__section
            %h3
              都道府県
              %span 必須
            = f.collection_select :prefucture, Prefecture.all, :id, :name, prompt: "---"
            %i.fas.fa-chevron-down

          .registration-box__section
            %h3
              市区町村
              %span 必須
            = f.text_field :city, class: "sell-box__info--input sell-box__info--name", placeholder: "例 横浜市"

          .registration-box__section
            %h3
              番地
              %span 必須
            = f.text_field :city_address, class: "sell-box__info--input sell-box__info--name", placeholder: "例 青山1-1-1"

          .registration-box__section
            %h3
              建物名
              %span.any 任意
            = f.text_field :building, class: "sell-box__info--input sell-box__info--name", placeholder: "例 スカイツリー"

          .registration-box__section
            %h3
              電話
              %span.any 任意
            = f.text_field :phone_number,class: "sell-box__info--input sell-box__info--name", placeholder: "例 123-4567-8901"
            = f.hidden_field :user_id ,value:current_user.id
            = f.submit "次へ進む" , class: "registration-box__inner--next-btn"
    %ul.other-footer
      %li プライバシーポリシー
      %li メルカリ利用規約
      %li 特定商取引による表記
    = image_tag '/assets/logo_gray.svg', width: "80px", height: "auto", class: "sell-wrap__logo-bottom"
    %p.copyright &copy; Freemarket_sample_64a

